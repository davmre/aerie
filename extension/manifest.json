{
  "manifest_version": 2,
  "name": "Aerie Tweet Collector",
  "version": "0.1.0",
  "description": "Captures tweets from Twitter's API for local filtering",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.twitter.com/*",
    "*://*.x.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "aerie@local.dev",
      "strict_min_version": "57.0"
    }
  }
}
