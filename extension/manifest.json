{
  "manifest_version": 2,
  "name": "Aerie Tweet Collector",
  "version": "0.2.0",
  "description": "Captures tweets from Twitter's API and filters your feed",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "aerie@local.dev",
      "strict_min_version": "57.0"
    }
  }
}
